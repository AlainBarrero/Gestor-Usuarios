<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>admin</portlet-name>
		<icon>/img/admin.png</icon>
		<control-panel-entry-category>
			site_administration.configuration
		</control-panel-entry-category>
		<control-panel-entry-weight>1.5</control-panel-entry-weight>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>admin-portlet</css-class-wrapper>
	</portlet>
	<portlet>
        <portlet-name>user</portlet-name>
		<icon>/img/icon.png</icon>
        <scheduler-entry>
        	<scheduler-description>Alertas y Modificaciones Usuario</scheduler-description>
        	<scheduler-event-listener-class>com.alain.monetizacion.scheduler.Scheduler</scheduler-event-listener-class>
        	<trigger>
				<simple>
             		<simple-trigger-value>1</simple-trigger-value>
          			<time-unit>day</time-unit>
      			 </simple>
			</trigger>
        </scheduler-entry>
        <control-panel-entry-category>my</control-panel-entry-category>
        <control-panel-entry-weight>1.5</control-panel-entry-weight>
        <instanceable>false</instanceable>
        <scopeable>false</scopeable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>user-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>pasarela</portlet-name>
		<icon>/img/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>pasarela-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>